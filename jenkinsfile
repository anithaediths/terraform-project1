  pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }
    stages {
      stage('fetch_latest_code') {
        steps {
          git credentialsId: '', url: 'https://github.com/anithaediths/terraform-project1'
        }
      }

      stage('TF Init') {
        steps {
          sh 'terraform init'
          sh 'terraform plan'
        }      
      }

      stage('TF Plan') {
        steps {
          sh 'cd terragrunt-config/environments/dev'
          sh 'terraform plan'
        }      
      }

    } 
  }
  pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }
    stages {
      stage('checkout') {
        steps {
          checkout scm
        }
      }

      stage('tf check') {
        steps {
          sh 'terraform --version'
        }
      }

      stage('TF Init') {
        steps {
          sh 'pwd'
          sh 'ls -ltra'
          sh 'cd terragrunt-config/environments/dev'
          sh 'terragrunt init'
        }      
      }

      stage('TF Plan') {
        steps {
          sh 'terraform plan'
        }      
      }

    } 
  }